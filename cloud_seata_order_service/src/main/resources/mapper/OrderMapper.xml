<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mashibing.seata.mapper.GoodsMapper">

    <update id="updateGoods">
        update goods
        <set>
            count=`count`-1
        </set>
        <where>
            id=1
        </where>
    </update>
</mapper>
